
.l_apply_container
  padding: 65px 0 1px
  width: auto
  min-width: 400px
  margin: 0 96px
  background-color: #ddd
  &.is_open_menu
    width: auto
    margin-left: 256px

// List
.l_list_container
  position: relative
  margin: 0
  padding: 0
  .l_list_header
    top: 65px
    height: 50px

//form
.l_form_container
  position: fixed
  bottom: 0
  right: 96px
  width: 480px
  height: calc(100vh - 72px)
  border-top-left-radius: 7.5px
  border-top-right-radius: 7.5px
  display: none
  flex-direction: column
  justify-content: space-between
  background-color: #fff
  opacity: 0
  z-index: 0
  &.is_open_form
    display: flex
    opacity: 1
    transition: opacity 300ms ease-in
    z-index: 3

// List Animation
.example-enter
  opacity: 0.1
  &.example-enter-active
    opacity: 1
    transition: opacity 1000ms ease-in

.example-leave
  opacity: 1
  &.example-leave-active
    opacity: 0.1
    transition: opacity 1000ms ease-in


  