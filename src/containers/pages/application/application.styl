.l_apply_header
  top: 65px
  height: 50px
  background-color: #fff

// List
.l_apply_container
  padding: 65px 0 1px
  width: auto
  min-width: 400px
  margin: 0 96px
  background-color: #ddd
  &.is_open_menu
    width: auto
    margin-left: 256px
  
.l_list_container
  position: relative
  margin: 0
  padding: 0
  .l_week_item
    border-bottom: 1px solid transparent
    color: #616161
    line-height: 24px
    margin: 20px 0 8px
    padding: 0 24px
    align-items: center
    -webkit-align-items: center
    display: -webkit-flex
    display: flex

// card
.md_card
  position: relative
  margin-bottom: 2px

.md_card_icon
  position: absolute
  top: 0
  right: 0
  z-index: 2

.md_card_content
  display: flex
  position: relative
  min-width: 400px
  .md_card_title
    overflow: hidden
    text-overflow: ellipsis
    text-align: left
    white-space: nowrap
    flex: (0 0 auto)
    width: 240px
    font-weight: bold
    span
      margin-right: 8px
  .md_card_detail
    margin: 0 24px 0 8px
    min-width: 0
    text-overflow: ellipsis
    text-align: left
    white-space: nowrap
    flex: (1 1 auto)
    color: #757575
    span
      margin-right: 8px

//FloatingActionButton
.l_floating_button
  position: fixed
  bottom: 16px
  right: 8px
  z-index: 100

// List Animation
.example-enter
  opacity: 0.1
  &.example-enter-active
    opacity: 1
    transition: opacity 1000ms ease-in

.example-leave
  opacity: 1
  &.example-leave-active
    opacity: 0.1
    transition: opacity 1000ms ease-in


  