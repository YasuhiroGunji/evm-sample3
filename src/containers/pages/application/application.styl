// card
.md_card
  position: relative
  margin:0 16px 2px 16px

.md_card_icon
  position: absolute
  top: 0
  right: 0
  z-index: 2

.md_card_content
  display: flex
  position: relative
  min-width: 400px
  .md_card_title
    overflow: hidden
    text-overflow: ellipsis
    text-align: left
    white-space: nowrap
    flex: (0 0 auto)
    width: auto
    font-weight: bold
    span
      margin-right: 8px

//form
.l_form_container
  position: fixed
  bottom: 0
  right: 90px
  width: 480px
  height: 550px
  border-top-left-radius: 7.5px
  border-top-right-radius: 7.5px
  display: none
  flex-direction: column
  justify-content: space-between
  background-color: #fff
  opacity: 0
  z-index: 0
  &.is_open_form
    display: flex
    opacity: 1
    transition: opacity 300ms ease-in
    z-index: 3

// List Animation
.example-enter
  opacity: 0.1
  &.example-enter-active
    opacity: 1
    transition: opacity 1000ms ease-in

.example-leave
  opacity: 1
  &.example-leave-active
    opacity: 0.1
    transition: opacity 1000ms ease-in


  