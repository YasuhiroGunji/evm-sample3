.l_main
  margin: 65px auto 0
  transition: transform 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms

// List
.l_apply_container
  padding: 65px 0 1px
  width: auto
  min-width: 400px
  margin: 0 96px
  background-color: #ddd
  &.is_open_menu
    width: auto
    margin-left: 240px
  &.is_open_form
    width: auto
    margin-right: 308px
  
.l_list_container
  position: relative
  margin: 0
  padding: 0
  .l_week_item
    border-bottom: 1px solid transparent;
    color: #616161;
    line-height: 24px;
    margin: 20px 0 8px;
    padding: 0 24px;
    align-items: center;
    -webkit-align-items: center;
    display: -webkit-flex;
    display: flex;
    

// card
.md_card_content
  display: flex
  position: relative
  min-width: 400px
  .md_card_title
    overflow: hidden
    text-overflow: ellipsis
    text-align: left
    white-space: nowrap
    flex: (0 0 auto)
    width: 240px
    font-weight: bold
    span
      margin-right: 8px
  .md_card_detail
    margin: 0 24px 0 8px
    min-width: 0
    text-overflow: ellipsis
    text-align: left
    white-space: nowrap
    flex: (1 1 auto)
    color: #757575
    span
      margin-right: 8px

//form
form-width = 30%

.l_form_container
  position: fixed
  display: flex
  flex-direction: column
  justify-content: space-between
  top: 65px
  bottom: 0
  right: 0
  width: 300px
  background-color: #fff
  transform: translateX(300px)
  transition: transform .25s ease-in-out
  &.is_open_form
    transform: translateX(0)
  .l_form_header
    flex: (0 0 auto)
    height: 60px
  .l_form_content
    overflow-y: auto
    flex: (1 1 auto)
    padding: 8px
  .l_form_footer
    flex: (0 0 auto)
    height: 60px

.l_form_row
  margin-right: 5px
  margin-left: 5px
  &:before
    display: table
    content: " "


//FloatingActionButton
.l_floating_button
  position: fixed
  top: 73px
  right: 8px
  z-index: 100

// List Animation
.example-enter
  opacity: 0.01

.example-enter.example-enter-active
  opacity: 1
  transition: opacity 500ms ease-in

.example-leave
  opacity: 1

.example-leave.example-leave-active
  opacity: 0.01
  transition: opacity 300ms ease-in


  