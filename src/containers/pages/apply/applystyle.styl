.l_apply_header
  top: 65px
  height: 50px
  background-color: #fff

// List
.l_apply_container
  padding: 65px 0 1px
  width: auto
  min-width: 400px
  margin: 0 96px
  background-color: #ddd
  &.is_open_menu
    width: auto
    margin-left: 256px
  &.is_open_form
    width: auto
    margin-right: 328px
  
.l_list_container
  position: relative
  margin: 0
  padding: 0
  .l_week_item
    border-bottom: 1px solid transparent
    color: #616161
    line-height: 24px
    margin: 20px 0 8px
    padding: 0 24px
    align-items: center
    -webkit-align-items: center
    display: -webkit-flex
    display: flex
    

// card
.md_card
  position: relative

.md_card_icon
  position: absolute
  top: 0
  right: 0
  z-index: 2

.md_card_content
  display: flex
  position: relative
  min-width: 400px
  .md_card_title
    overflow: hidden
    text-overflow: ellipsis
    text-align: left
    white-space: nowrap
    flex: (0 0 auto)
    width: 240px
    font-weight: bold
    span
      margin-right: 8px
  .md_card_detail
    margin: 0 24px 0 8px
    min-width: 0
    text-overflow: ellipsis
    text-align: left
    white-space: nowrap
    flex: (1 1 auto)
    color: #757575
    span
      margin-right: 8px

//form
form-width = 30%

.l_form_container
  position: fixed
  bottom: 0
  right: 90px
  width: 480px
  height: 550px
  border-top-left-radius: 7.5px
  border-top-right-radius: 7.5px
  display: flex
  flex-direction: column
  justify-content: space-between
  background-color: #fff
  opacity: 0
  z-index: 3
  &.is_open_form
    opacity: 1
    transition: opacity 300ms ease-in
  .l_form_header
    background: #424242
    border-top-left-radius: 5px
    border-top-right-radius: 5px
    color: #fff
    height: 18px
    line-height: 18px
    outline: 1px solid transparent
    padding: 11px 20px
    transform: translateZ(0)
    -webkit-flex: 0 0 auto
    flex: 0 0 auto
  .l_form_content
    overflow-y: auto
    flex: 1 1 auto
    padding: 8px
  .l_form_footer
    display: flex
    height: 64px
    padding: 14px 20px
    align-items: center
    flex: 0 0 auto

